# Vercel Environment Variables Template
# Copy these to Vercel Project Settings > Environment Variables
# Replace values with your own

# Environment
NODE_ENV=production
PORT=3000

# Turso Database Configuration (Required for Vercel)
TURSO_CONNECTION_URL=libsql://rodb-news-xxxxx.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token-here

# Security & Authentication (Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your-jwt-secret-min-32-chars-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-min-32-chars-here
SESSION_SECRET=your-session-secret-min-32-chars-here
ADMIN_SECRET=your-admin-secret-here

# JWT Configuration
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
SESSION_TIMEOUT=3600000

# Logging
LOG_LEVEL=info

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5

# Optional: Organization Details
ORG_NAME=Routine of Dhulikhel Banda
ORG_EMAIL=rodb.dhulikhel@gmail.com

# Optional: File Upload
UPLOAD_MAX_FILE_SIZE=10485760

# Optional: Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true
